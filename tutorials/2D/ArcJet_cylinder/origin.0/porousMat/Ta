FoamFile {
  version     2.0;
  format      ascii;
  class       volScalarField;
  location    "0";
  object      Ta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField {
  top
  {
    type             Bprime;
    BprimeFile "$PATO_DIR/data/Environments/Tables/TACOT-Earth-1atm";
    movingMesh yes;
    mappingType constant;
    mappingFileName "constant/porousMat/BoundaryConditions";
    mappingFields
    (
        (p "1")
        (rhoeUeCH "2")
        (h_r "3")
        (chemistryOn "4")
        (lambda "5")
        (Tbackground "6")
    );
    qRad 0;
    Tedge 300;
    hconv 0;
    value uniform 300;
  }
  sides
  {
    type            zeroGradient;
  }
  bottom
  {
    type            zeroGradient;
  }
  wedge_neg
  {
    type            wedge;
  }
  wedge_pos
  {
    type            wedge;
  }
  axis
  {
    type            empty;
  }
}


