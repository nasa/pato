FoamFile {
  version     2.0;
  format      ascii;
  class       volScalarField;
  location    "0";
  object      Ta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField {
  top
  {
    type             Bprime;
    mixtureMutationBprime tacot26;
    environmentDirectory "$PATO_DIR/data/Environments/RawData/Earth";
    movingMesh yes;
    mappingType constant;
    mappingFileName "constant/porousMat/BoundaryConditions";
    mappingFields
    (
        (p "1")
        (rhoeUeCH "2")  	// used with ChemistryOn
        (h_r "3")   		// used with ChemistryOn
        (hconv "4")		// used with ChemistryOff
        (Tedge "5")		// used with ChemistryOff
        (chemistryOn "6")
    );
    qRad 0;
    lambda 0.5;
    Tbackground 300;
    value uniform 300;
  }
  sides
  {
    type            zeroGradient;
  }
  bottom
  {
    type            zeroGradient;
  }
}


