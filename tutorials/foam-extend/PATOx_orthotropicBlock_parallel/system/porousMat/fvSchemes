FoamFile {
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "system";
  object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

d2dt2Schemes {
default         Euler;
}

ddtSchemes {
default         Euler;
}

gradSchemes {
default         extendedLeastSquares 0;
  grad(U)         extendedLeastSquares 0;
  snGradCorr(U)   extendedLeastSquares 0;
  grad(cellMotionU)  Gauss linear corrected;
}

divSchemes {
default         none;
  div(sigma)      Gauss skewCorrected linear;
}

laplacianSchemes {
default         Gauss linear corrected;
}

snGradSchemes {
  snGrad(U)       corrected;
}

interpolationSchemes {
default         linear;
}


