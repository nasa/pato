FoamFile {
  version         4.0;
  format          ascii;
  class           dictionary;
  location        system/porousMat;
  object          plotDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

interpolationScheme cellPoint;

setFormat         raw;
surfaceFormat     raw;

sets
(
    plot
    {
      type            points;
      axis            xyz;
      ordered         on;
      points          (
		       (0 0.049 0)                                                                                                                                                                                                                          
		       (0 0.048 0)                                                                                                                                                                                                                          
		       (0 0.046 0)                                                                                                                                                                                                                          
		       (0 0.042 0)                                                                                                                                                                                                                          
		       (0 0.038 0)                                                                                                                                                                                                                          
		       (0 0.034 0)                                                                                                                                                                                                                          
		       (0 0.026 0)
		       );
    }
);


fields
(
    Ta
    Z[O]
    Z[N]
    Z[C]
    Z[H]
    pi[O]
    pi[N]
    pi[C]
    pi[H]
    piPyroReac[0]
    piPyroReac[1]
    piPyroReac[2]
    piTotal
);

