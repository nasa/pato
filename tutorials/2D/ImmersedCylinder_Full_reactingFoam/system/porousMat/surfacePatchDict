FoamFile {
  version         4.0;
  format          ascii;
  class           dictionary;
  location        system/porousMat;
  object          surfacePatchDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

interpolationScheme cellPatchConstrained;

setFormat         raw;
surfaceFormat     raw;

sets
(
surfacePatch {
  type            boundaryPoints;
  axis            xyz;
  points        (
      (-0.05 0 0)
  );
  maxDistance     1e-2;
  patches         (".*");
}
);


fields
(
    Ta
);

