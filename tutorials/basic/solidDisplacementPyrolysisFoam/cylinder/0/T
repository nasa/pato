FoamFile {
  version     2.0;
  format      ascii;
  class       volScalarField;
  object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField {
  right
  {
    type            fixedValue;
    value           uniform 600;
  }
  down
  {
    type            symmetryPlane;
  }
  up
  {
    type            fixedValue;
    value           uniform 600;
  }
  front
  {
    type            wedge;
  }
  back
  {
    type            wedge;
  }
  center
  {
    type            empty;
  }
}

