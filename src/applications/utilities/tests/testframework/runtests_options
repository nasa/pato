FoamFile {
  version     7.0;
  format      ascii;
  class       dictionary;
  location    "$PATO_DIR/src/applications/utilities/tests";
  object      runtests_options;
}

// endTime option
endTime_factor 6; // endTime = startTime + (endTime - startTime) / endTime_factor;

// tolerance option (see below)
tol_linux_0 1e-3;
tol_linux_1 1e-3;

tol_mac_0 1e-3;
tol_mac_1 1;
tol_mac_2 2e-2;
tol_mac_3 1e-3;

