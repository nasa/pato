FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    top
    {
      type             uniformFixedValue;
      uniformValue table
        (
             (0   300)
             (120 1000)
        );
    }
    sides
    {
        type            zeroGradient;
    }
    porousMat1_to_porousMat2
    {
        type            zeroGradient;
    }
}


