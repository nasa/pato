FoamFile {
  version         4.0;
  format          ascii;
  class           dictionary;
  location        system/porousMat;
  object          plotDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

interpolationScheme cellPoint;

setFormat         raw;
surfaceFormat     raw;

sets
(
plot {
  type            points;
  ordered on;
  axis            xyz;
  points          (
      (0 0.0049 0)
      (0 0.0045 0)
      (0 0.004 0)
      (0 0.003 0)
      (0 0.002 0)
      (0 0.001 0)
  );
}
);

fields
(
    Ta
);

