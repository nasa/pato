FoamFile {
  version         7.0;
  format          ascii;
  class           dictionary;
  object          plotDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

interpolationScheme cellPoint;

setFormat         raw;
surfaceFormat     raw;

sets
(
plot {
  type            points;
  ordered         on;
  axis            distance;
  points
  (
      (0.001 0 0)
      (0.005 0 0)
      (0.01  0 0)
  );
}
);


fields
(
    Ta
    Tg
    U
);

