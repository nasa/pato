FoamFile
{
    version     5.0;
    format      ascii;
    class       volVectorField;
    location    "0/porousMat";
    object      cellMotionU;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    top
    {
        type            erosionModel;
	physicsBasedErosionModel 1;
        value           uniform (0 0 0);
    }
    sides
    {
        type            slip;
    }
    bottom
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }
}


