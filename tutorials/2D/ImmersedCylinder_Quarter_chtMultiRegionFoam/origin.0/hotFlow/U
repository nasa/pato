FoamFile {
  version     2.0;
  format      ascii;
  class       volVectorField;
  location    "0/cube";
  object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField {
  top
  {
    type            symmetryPlane;
  }
  bottom
  {
    type            symmetryPlane;
  }
  inlet
  {
    type            pressureInletVelocity;
    value           uniform ( 0 0 0 );
  }

  outlet
  {
    type            inletOutlet;
    value           uniform ( 0 0 0 );
    inletValue      uniform ( 0 0 0 );
  }

  hotFlow_to_porousMat
  {
// Decoupled velocity simulation
//      type            fixedValue;
//      value           uniform (0 0 0);

// Coupled velocity simulation
    type            fixedValueToNbrValue;
    nbr             U;
    value	       uniform ( 0 0 0 );
  }

  frontAndBack
  {
    type            empty;
  }
}


