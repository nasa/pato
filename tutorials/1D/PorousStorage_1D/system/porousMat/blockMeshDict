FoamFile {
  version     2.0;
  format      ascii;
  class       dictionary;
  object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

convertToMeters 1;

Lx 0.27;
Ly 0.26;
H  1;

vertices
(
    (0 0 0)
    ($Lx 0 0)
    ($Lx $Ly 0)
    (0  $Ly 0)
    (0 0 $H)
    ($Lx 0 $H)
    ($Lx $Ly $H)
    (0  $Ly $H)

);

blocks
(
    hex (0 1 2 3 4 5 6 7) (1 1 100) simpleGrading (1 1 1)
);

boundary
(
hot {
  type patch;
  faces
  (
      (4 5 6 7)
  );
}

cold {
  type patch;
  faces
  (
      (0 3 2 1)
  );
}

frontAndBack {
  type empty;
  faces
  (
      (0 4 7 3)
      (7 6 2 3)
      (1 2 6 5)
      (0 1 5 4)
  );
}
);

