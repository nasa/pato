FoamFile {
  version     2.0;
  format      ascii;
  class       dictionary;
  location    "constant";
  object      chemistryProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

chemistryType {
  chemistrySolver   EulerImplicit;
  chemistryThermo   rho;
}

chemistry           on;

initialChemicalTimeStep 1e-07;

EulerImplicitCoeffs {
  cTauChem        1;
  equilibriumRateLimiter off;
}

odeCoeffs {
  solver          Rosenbrock34;
  absTol          1e-12;
  relTol          0.01;
}

