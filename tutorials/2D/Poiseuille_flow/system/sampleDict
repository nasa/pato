FoamFile {
  version         2.0;
  format          ascii;
  class           dictionary;
  location        system;
  object          sampleDict;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

type sets;
libs ("libsampling.so");

interpolationScheme cellPoint;
setFormat     	  raw;
surfaceFormat       raw;

setConfig {
  type    lineCell;
  axis    distance;  // x, y, z, xyz
}

sets
(
line1 {
  $setConfig;
  start (0   0 0);
  end   (0.1 0 0);
}

);

fields
(
    U p
);

