FoamFile {
  version     2.0;
  format      ascii;
  class       volScalarField;
  object      Ta;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField {
  top
  {
    type boundaryMapping;
    mappingType constant;
    mappingFields (("Ta" "1"));
    mappingFileName "Temperature.txt";
    value uniform 300;
  }
  sides
  {
    type            zeroGradient;
  }
  bottom
  {
    type            zeroGradient;
  }
}

