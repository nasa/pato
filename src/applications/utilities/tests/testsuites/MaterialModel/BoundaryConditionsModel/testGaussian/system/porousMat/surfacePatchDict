type sets;
libs ("libsampling.so");

interpolationScheme cellPatchConstrained;

setFormat         raw;
surfaceFormat     raw;

sets
(
    surfacePatch                                                                                                                                                                                                                                             
    {                                                                                                                                                                                                                                                         
      type            patchCloud;                                                                                                                                                                                                                           
      axis            xyz;                                                                                                                                                                                                                                  
      points          (                                                                                                                                                                                                                                     
		       (0 0.05 0)                                                                                                                                                                                                                      
		       (0 0 0)                                                                                                                                                                                                                              
         		    );                                                                                                                                                                                                   
      maxDistance     1e-3;                                                                                                                                                                                                                                
      patches         (".*");                                                                                                                                                                                                                               
    }   
 );


fields
(
 Ta
